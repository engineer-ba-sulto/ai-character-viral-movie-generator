{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Authentication Schemas",
  "description": "JSON Schemas for user authentication endpoints (signup and login), based on Zod validation.",
  "definitions": {
    "signup": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "User's email address."
        },
        "password": {
          "type": "string",
          "minLength": 8,
          "description": "User's password, at least 8 characters long."
        }
      },
      "required": ["email", "password"],
      "additionalProperties": false
    },
    "login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "User's email address."
        },
        "password": {
          "type": "string",
          "description": "User's password."
        }
      },
      "required": ["email", "password"],
      "additionalProperties": false
    }
  }
}
